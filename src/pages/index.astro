---
export const prerender = true;

import Layout from '../layouts/Layout.astro';
---

<Layout title="PremPredict - Home">
    <div class="w-full grid h-screen place-items-center">
        <div
            class="m-auto h-20 w-20 animate-spin rounded-full border-4 border-solid border-current border-r-transparent motion-reduce:animate-[spin_1.5s_linear_infinite]"
            role="status">
            <span
                class="!absolute !-m-px !h-px !w-px !overflow-hidden !whitespace-nowrap !border-0 !p-0 ![clip:rect(0,0,0,0)]"
                >Loading...</span
            >
        </div>
    </div>
</Layout>
